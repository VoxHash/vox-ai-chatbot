{
  "name": "chatbot-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --env-file=../.env --watch src/index.js",
    "start": "node --env-file=../.env src/index.js",
    "start:telegram": "node --env-file=../.env src/integrations/telegram.js",
    "start:slack": "node --env-file=../.env src/integrations/slack.js",
    "start:discord": "node --env-file=../.env src/integrations/discord.js",
    "test": "jest --env-file=../.env",
    "test:watch": "jest --watch --env-file=../.env",
    "test:integration": "jest src/tests/integrations --env-file=../.env",
    "test:coverage": "jest --coverage --env-file=../.env"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.53.2",
    "pg": "^8.12.0",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}