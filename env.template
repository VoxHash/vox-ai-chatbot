# Vox AI Chatbot Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/vox_chatbot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vox_chatbot
DB_USER=username
DB_PASSWORD=password

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# Choose one AI provider:

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# OR LocalAI Configuration
LOCALAI_URL=http://localhost:8080
LOCALAI_MODEL=vox_legacy

# Model Selection (openai, localai)
AI_PROVIDER=openai
MODEL_NAME=gpt-4

# =============================================================================
# BOT TOKENS (Get from respective platforms)
# =============================================================================

# Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Telegram Bot Token  
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# WhatsApp Bot (No token needed - uses QR authentication)
# Just start the bot and scan QR code

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here
BCRYPT_ROUNDS=12

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# CLOUDFLARE R2 (Optional - for file storage)
# =============================================================================
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=vox-chatbot-storage
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/vox-chatbot.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================
WHATSAPP_SESSION_NAME=vox-ai-session
WHATSAPP_QR_TIMEOUT=120000

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_discord_server_id

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
ENABLE_ANALYTICS=false
ANALYTICS_KEY=your_analytics_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_TEST_ROUTES=false
